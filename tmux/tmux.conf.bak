# Plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'

# NOTE: Import pywal16 colors
. "${HOME}/.cache/wal/colors.sh"

# NOTE: Trying my own configuration

# Enable status bar
set -g status-style "bg=#1e1e2e fg=#cdd6f4"

# Left Side: Session Name (Spaced Layout)
set -g status-left-length 100
set -g status-left " \
#[fg=#89b4fa]#[bg=#89b4fa,fg=#1e1e2e] #S #[fg=#89b4fa,bg=#1e1e2e] \
 "

# Right side (Battery, Date, Time) - Each one is wrapped with separators
set -g status-right "#[fg=#f9e2af,bg=#1e1e2e]#[bg=#f9e2af,fg=#1e1e2e] #(cat /sys/class/power_supply/BAT0/capacity)% #[fg=#f9e2af,bg=#1e1e2e]\
 #[fg=#89b4fa,bg=#1e1e2e]#[bg=#89b4fa,fg=#1e1e2e] %Y-%m-%d #[fg=#89b4fa,bg=#1e1e2e]\
 #[fg=#a6e3a1,bg=#1e1e2e]#[bg=#a6e3a1,fg=#1e1e2e] %H:%M #[fg=#a6e3a1,bg=#1e1e2e]"

# Window List Styling (Uses Rounded Separators)
setw -g window-status-format " \
#[fg=#7f849c]#[bg=#7f849c,fg=#1e1e2e] #I:#W #[fg=#7f849c,bg=#1e1e2e] \
"
setw -g window-status-current-format " \
#[fg=#89b4fa]#[bg=#89b4fa,fg=#1e1e2e] #I:#W #[fg=#89b4fa,bg=#1e1e2e] \
"
setw -g window-status-style "bg=#1e1e2e,fg=#7f849c"
setw -g window-status-current-style "bg=#1e1e2e,fg=#89b4fa"

# NOTE: Test end


