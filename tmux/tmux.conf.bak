# Enable 256 colors and true-colors

set -g default-terminal "screen-256color"
set -ga terminal-overrides ",*256col*:Tc"

# General
set -g set-clipboard on
set -g mouse on
set -g status-interval 3
set -g detach-on-destroy off
set-option -g status-position top
set -g history-limit 1000000

# Prefix key
unbind C-b
set -g prefix M-Space

# Start windows and panes at 1, not 0
set -g base-index 1
set -g pane-base-index 1
set-window-option -g pane-base-index 1
set-option -g renumber-windows on

# Splitting panes with 'i' and 'o'
unbind %
bind i split-window -h -c "#{pane_current_path}"

unbind \"
bind o split-window -v -c "#{pane_current_path}"

# Open new windows in the same path
bind c new-window -c "#{pane_current_path}"

# Use vim keys to navigate panes
bind-key j select-pane -D
bind-key k select-pane -U
bind-key h select-pane -L
bind-key l select-pane -R

# Use alt + vim keys to resize
bind -r M-j resize-pane -D 5
bind -r M-k resize-pane -U 5
bind -r M-l resize-pane -R 5
bind -r M-h resize-pane -L 5
bind -r M resize-pane -Z 5 # Use 'm' to maximize a pane

# Initialize TPM (Tmux Plugin Manager), (keep this part at the bottom)
run '~/.tmux/plugins/tpm/tpm'
